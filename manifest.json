{
    "manifest_version": 3,
    "name": "My Maps — Updated Design",
    "version": "2.4.8",
    "description": "Morden design for Google My Maps by bbublllikk",
    "web_accessible_resources": [
        {
            "resources": [
                "icons/favicon.png",
                "resources/pataka.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.google.com/maps/d/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/maps/d/*",
                "https://www.google.com/maps/d/u/*/",
                "https://www.google.com/maps/d/viewer*",
                "https://www.google.com/maps/d/u/*/viewer*",
                "https://www.google.com/maps/d/edit*",
                "https://www.google.com/maps/d/u/*/edit*",
                "https://www.google.com/maps/d/copy*",
                "https://www.google.com/maps/d/u/*/copy*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Настройки дизайна My Maps"
    }
}